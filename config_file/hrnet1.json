{
    "num_works": 15,
    "model": {
        "loss_func": "BCELoss",
        "loss_weight":2.0,
        "name": "hrnet",
        "pretrained": "./pretrained/hrnet.pth",
        "extra": {
            "final_conv_kernel": 1,
            "stage1": {
                "num_modules": 1,
                "num_ranches": 1,
                "block": "BOTTLENECK",
                "num_blocks": [
                    2
                ],
                "num_channels": [
                    64
                ],
                "fuse_method": "SUM"
            },
            "stage2": {
                "num_modules": 1,
                "num_branches": 2,
                "block": "BASIC",
                "num_blocks": [
                    2,
                    2
                ],
                "num_channels": [
                    18,
                    36
                ],
                "fuse_method": "SUM"
            },
            "stage3": {
                "num_modules": 3,
                "num_branches": 3,
                "block": "BASIC",
                "num_blocks": [
                    2,
                    2,
                    2
                ],
                "num_channels": [
                    18,
                    36,
                    72
                ],
                "fuse_method": "SUM"
            },
            "stage4": {
                "num_modules": 2,
                "num_branches": 4,
                "block": "BASIC",
                "num_blocks": [
                    2,
                    2,
                    2,
                    2
                ],
                "num_channels": [
                    18,
                    36,
                    72,
                    144
                ],
                "fuse_method": "SUM"
            }
        }
    },
    "lr_strategy":{
        "warmup_epochs":10,
        "lr":1e-3,
        "min_lr":1e-6,
        "epochs":40
    },
    "train": {
        "batch_size": 120,
        "begin_epoch": 0,
        "end_epoch": 40,
        "early_stop": 30,
        "optimizer": "adam",
        "lr": 0.001,
        "wd": 5e-4,
        "momentum": 0.0,
        "nesterov": false 
    }
}